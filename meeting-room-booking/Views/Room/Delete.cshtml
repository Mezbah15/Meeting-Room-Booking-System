@using meeting_room_booking.ViewModels
@model RoomViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="alert-danger">
    @ViewBag.ErrorMessage
</div>
<a asp-action="Index" class="btn btn-outline-info">All Rooms</a>
@{
    if (ViewBag.ErrorMessage == null)
    {
        <h5 style="padding-top: 2rem">Are you sure you want to delete this Room?</h5>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Capacity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Capacity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RoomColor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RoomColor)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    }
}

